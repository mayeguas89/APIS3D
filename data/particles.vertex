#version 330

attribute vec4 vP;
attribute vec4 vCd;
attribute vec2 vT;
attribute mat4 mModelMatrix;
in float vAlpha;

out vec4 fColor;
out vec2 fTextCoord;
out float fAlpha;

uniform mat4 P;
uniform mat4 V;

void main() {
    gl_Position = P * V * mModelMatrix * vP;
    fColor = vCd;
    fTextCoord = vT;
    fAlpha = vAlpha;
}
